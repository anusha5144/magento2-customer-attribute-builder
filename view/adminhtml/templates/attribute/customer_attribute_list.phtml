            <th scope="col" class="col-system">System</th>
            <th scope="col" class="col-visible">Display on Frontend</th>
            <th scope="col" class="col-store">Store Views</th>
            <th scope="col" class="col-sorting">Display Order</th>
            <th scope="col" class="col-action">Action</th>
        </tr>
        <tr class="filter-row">
            <td><input type="text" class="admin__control-text filter-input" data-filter="attribute_code"></td>
            <td><input type="text" class="admin__control-text filter-input" data-filter="frontend_label"></td>
            <td>
                <select class="admin__control-select filter-select" data-filter="is_required">
                    <option value=""></option>
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
            </td>
            <td>
                <select class="admin__control-select filter-select" data-filter="is_system">
                    <option value=""></option>
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
            </td>
            <td>
                <select class="admin__control-select filter-select" data-filter="is_visible">
                    <option value=""></option>
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
            </td>
            <td><input type="text" class="admin__control-text filter-input" data-filter="store_info"></td>
            <td><input type="text" class="admin__control-text filter-input" data-filter="sort_order"></td>
            <td></td>
        </tr>
    </thead>
    <tbody id="attribute-table-body">
    </tbody>
</table>

